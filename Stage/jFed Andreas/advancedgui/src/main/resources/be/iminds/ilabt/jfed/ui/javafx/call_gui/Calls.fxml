<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import be.iminds.ilabt.jfed.ui.javafx.log_gui.*?>
<?import be.iminds.ilabt.jfed.ui.javafx.call_gui.*?>

<fx:root type="javafx.scene.layout.BorderPane" prefHeight="800.0" prefWidth="1024.0" xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
        <URL value="@../style/advanced_gui.css" />
        <URL value="@../style/calls.css" />
    </stylesheets>
    <center>
        <SplitPane minHeight="300" minWidth="300" orientation="HORIZONTAL">
            <TaskList fx:id="allTaskList" maxWidth="-Infinity"/>

            <SplitPane minHeight="300" minWidth="300" orientation="VERTICAL">
                <VBox>
                    <VBox>
                        <Label text="Task details"/>
                        <HBox> <Label text="Name: "/><TextField editable="false" text="" fx:id="taskNameField" HBox.hgrow="ALWAYS"/></HBox>
                        <HBox> <Label text="State: "/><TextField editable="false" text="" fx:id="taskStateField" HBox.hgrow="ALWAYS"/></HBox>
                        <HBox fx:id="startTimeBox" visible="false" managed="false">
                            <Label text="Start Time: "/><TextField editable="false" text="" fx:id="startTimeField" HBox.hgrow="ALWAYS"/><Label text="" fx:id="relStartTimeLabel"/>
                        </HBox>
                        <HBox fx:id="stopTimeBox" visible="false" managed="false">
                            <Label text="Stop Time: "/><TextField editable="false" text="" fx:id="stopTimeField" HBox.hgrow="ALWAYS"/><Label text="" fx:id="relStopTimeLabel"/>
                        </HBox>
                        <Label text="This request was cancelled by the user" fx:id="canceledLabel" visible="false" managed="false"/>

                        <padding>
                            <Insets top="15.0" left="0.0" right="0.0" bottom="15.0" />
                        </padding>
                    </VBox>
                    <VBox>
                        <Button text="Cancel Task" onAction="#cancel" fx:id="cancelButton" disable="true"/>
                        <padding>
                            <Insets top="15.0" left="0.0" right="0.0" bottom="15.0" />
                        </padding>
                    </VBox>
                    <VBox fx:id="taskExceptionBox" VBox.vgrow="SOMETIMES">
                        <Label text="Exception Stack trace:"/>
                        <TextArea fx:id="taskExceptionArea" VBox.vgrow="ALWAYS"/>
                        <Button text="Print stacktrace to console" onAction="#printStackTrace"/>
                    </VBox>
                    <HBox VBox.vgrow="SOMETIMES">
                        <VBox HBox.hgrow="ALWAYS">
                            <Label text="This task depends on:"/>
                            <TaskList fx:id="dependingOnTaskList" maxWidth="-Infinity"/>
                            <padding>
                                <Insets top="0.0" left="0.0" right="20.0" bottom="0.0" />
                            </padding>
                        </VBox>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label text="Tasks depending on this task:"/>
                            <TaskList fx:id="dependersTaskList" maxWidth="-Infinity"/>
                        </VBox>
                    </HBox>
                </VBox>

                <VBox>
                    <Label text="Task log(s)"/>
                    <LogHistoryPanel fx:id="logPanel" />
                </VBox>
            </SplitPane>
        </SplitPane>
    </center>
</fx:root>
