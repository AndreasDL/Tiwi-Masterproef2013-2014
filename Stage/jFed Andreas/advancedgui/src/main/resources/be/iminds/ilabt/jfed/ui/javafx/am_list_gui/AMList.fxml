<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml">

    <stylesheets>
        <URL value="@../style/advanced_gui.css" />
        <URL value="@../style/am_lists.css" />
    </stylesheets>
    <!--<top>-->
    <!--<ToolBar>-->
    <!--<Label text="Note: This is an alpha version. This part of the GUI is functional, but needs work to make it user friendly."/>-->
    <!--</ToolBar>-->
    <!--</top>-->
    <left>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Internal">
                <VBox>
                    <Label text="Internal Authority List:"/>
                    <ListView fx:id="internalAuthorityList"/>
                    <Button styleClass="addBtn" text="Add New..." onAction="#addNew" maxWidth="500"/>
                    <Button styleClass="addBtn" text="Add New by scanning AM URL..." onAction="#scan" maxWidth="500"/>
                    <Button text="Reset All to Internal Defauls" onAction="#resetList" maxWidth="500">
                        <VBox.margin>
                            <Insets top="15.0" />
                        </VBox.margin>
                    </Button>
                    <Button text="Save List" onAction="#saveList" maxWidth="500">
                        <VBox.margin>
                            <Insets top="15.0" />
                        </VBox.margin>
                    </Button>
                    <Button text="Load List" onAction="#loadList" maxWidth="500"/>
                    <Button text="View as XML..." onAction="#viewXMLList" maxWidth="500">
                        <VBox.margin>
                            <Insets top="15.0" />
                        </VBox.margin>
                    </Button>
                </VBox>
            </Tab>
            <Tab text="External">
                <VBox>
                    <Button text="Load from Fed4Fire Testbed Repository using HTTPS" onAction="#loadF4f"/>
                    <Button text="Load from Utah Emulab Clearinghouse using HTTPS" onAction="#loadUtahHttp"/>
                    <!--<Button text="Load from Utah Emulab Clearinghouse using Clearinghouse API" onAction="#loadUtahCH"/>-->
                    <!--<Button text="Load from custom URL using Clearinghouse API..." onAction="#loadAnyCH"/>-->
                    <HBox>
                        <Label text="URL: "/>
                        <Label fx:id="externalURL"/>
                    </HBox>
                    <Label text="External Authority List:"/>
                    <ListView fx:id="externalAuthorityList"/>
                </VBox>
            </Tab>
        </TabPane>
    </left>
    <center>
        <VBox>
            <HBox><Label text="Name:"/><TextField fx:id="nameField" HBox.hgrow="ALWAYS"/></HBox>
            <HBox><Label text="URN:"/><TextField fx:id="urnField" HBox.hgrow="ALWAYS" editable="false"/></HBox>
            <HBox><Label text="URN part:"/><TextField fx:id="urnPartField" editable="false" HBox.hgrow="ALWAYS"/></HBox>
            <HBox><CheckBox text="reconnect for each call" fx:id="reconnectCheckBox"/></HBox>

            <Label text="Allowed Certificate:">
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
            </Label>
            <TextArea fx:id="certField"/>

            <Label text="Authority Server URL's:">
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
            </Label>
            <HBox fx:id="urlsPanelHBox"/>

            <Label text="Allowed Certificate Aliases:">
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
            </Label>
            <HBox fx:id="allowedCertAliasesPanelHBox"/>

            <HBox>
                <VBox.margin>
                    <Insets top="25.0" />
                </VBox.margin>
                <!--<Button styleClass="saveInternalBtn" text="Commit Changes" onAction="#saveToInternal" fx:id="saveButton" disable="true" visible="false"/>-->
                <Button styleClass="discardBtn" text="Discard Changes" onAction="#discard" fx:id="discardButton" disable="true"/>
                <Button styleClass="removeBtn" text="Remove from Internal List" onAction="#delete" fx:id="deleteButton"/>
                <Button text="View as XML..." onAction="#viewXML" fx:id="showXmlButton"/>
            </HBox>
            <VBox.margin>
                <Insets left="5.0" right="5.0" top="20.0" bottom="20.0" />
            </VBox.margin>
        </VBox>
    </center>
</fx:root>
