<panel name="rootcommandpan" columns="2" gap="4" top="4" left="4" colspan="1" weightx="1" weighty="1">
    <panel weightx="1" weighty="1" columns="2" colspan="2">
        <label name="commandLabel" text="" init="initCommandLabel(commandLabel)" colspan="1" />
        <panel name="hint" init="initHint(hint)" colspan="1" />
    </panel>
    <panel weightx="1" weighty="1" columns="1">
        <button text="Call" action="call(closeAfterCall.selected)" weightx="1" weighty="1"/>
        <button text="Cancel" action="cancel" weightx="1"/>
        <checkbox text="Close after call" name="closeAfterCall" selected="true" weightx="1"/>
    </panel>
    <panel name="commandpan" columns="1" gap="4" top="4" left="4" weightx="10" weighty="1">
    </panel>
</panel>