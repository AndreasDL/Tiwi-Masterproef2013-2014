<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml" minHeight="200" minWidth="200" >
    <top>
        <ToolBar fx:id="toolbar">
            <items>
                <Label fx:id="titleLabel" text="Edit" />
                <Button fx:id="removeSelectedItemButton" text="Remove" onAction="#removeSelectedItem" />
            </items>
        </ToolBar>
    </top>
    <center>
    <GridPane fx:id="propertiesGridPane" alignment="TOP_CENTER" layoutX="0.0" layoutY="0.0"  minHeight="200" minWidth="400">
          <children>
          </children>
          <columnConstraints>
                <ColumnConstraints hgrow="NEVER" maxWidth="50.0" minWidth="-1"  />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="-1"  />
                <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
                <!-- <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" prefWidth="100.0" /> -->
          </columnConstraints>
          <rowConstraints>
                 <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                 <!-- <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> -->
          </rowConstraints>
    </GridPane>


