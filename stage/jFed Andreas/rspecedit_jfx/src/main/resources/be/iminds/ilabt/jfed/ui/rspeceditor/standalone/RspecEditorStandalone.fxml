<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import be.iminds.ilabt.jfed.ui.rspeceditor.editor.*?>

<VBox  xmlns:fx="http://javafx.com/fxml" id="Content"
    fx:controller="be.iminds.ilabt.jfed.ui.rspeceditor.standalone.RspecEditorStandaloneController">

  <Label text="Rspec:"/>
  <TextArea fx:id="rspecText" text="" />

  <HBox>
      <Button text="" onAction="#rspecToEditor">
          <graphic>
              <Path>
                  <elements>
                      <MoveTo x="10.0" y="10.0"/>
                      <LineTo x="20.0" y="10.0"/>
                      <LineTo x="20.0" y="30.0"/>
                      <LineTo x="25.0" y="30.0"/>
                      <LineTo x="15.0" y="40.0"/>
                      <LineTo x="5.0" y="30.0"/>
                      <LineTo x="10.0" y="30.0"/>
                      <LineTo x="10.0" y="10.0"/>
                  </elements>
              </Path>
          </graphic>
      </Button>

      <Button text="" onAction="#editorToRspec">
          <graphic>
              <Path>
                  <elements>
                      <MoveTo x="10.0" y="40.0"/>
                      <LineTo x="20.0" y="40.0"/>
                      <LineTo x="20.0" y="20.0"/>
                      <LineTo x="25.0" y="20.0"/>
                      <LineTo x="15.0" y="10.0"/>
                      <LineTo x="5.0" y="20.0"/>
                      <LineTo x="10.0" y="20.0"/>
                      <LineTo x="10.0" y="40.0"/>
                  </elements>
              </Path>
          </graphic>
      </Button>
  </HBox>

    <RspecEditorPanel fx:id="rspecEditor" VBox.vgrow="ALWAYS"/>
</VBox>
