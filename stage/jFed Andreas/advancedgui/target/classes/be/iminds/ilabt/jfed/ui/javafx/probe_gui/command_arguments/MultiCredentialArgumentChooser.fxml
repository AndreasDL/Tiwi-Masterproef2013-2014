<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" >
    <ExpandableHelp expanded="false" text="Hint: select zero, one or multiple credentials."/>
    <ListView fx:id="listView"  VBox.vgrow="SOMETIMES" minWidth="300.0" minHeight="50.0" maxHeight="150.0"/>

    <HBox>
        <Button text="Add New..." onAction="#add" fx:id="addButton"/>
        <Button text="Edit..." onAction="#edit" fx:id="editButton"/>
        <Button text="View..." onAction="#view" fx:id="viewButton"/>
    </HBox>
</fx:root>
